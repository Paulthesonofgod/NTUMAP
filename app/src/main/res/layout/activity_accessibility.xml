<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessibilityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@android:color/transparent"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accessibility Settings"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Voice Guidance Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice & Audio"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/voiceGuidanceCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Guidance for Navigation"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provides audio instructions during navigation"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="32dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Visual Accessibility Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visual Accessibility"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/highContrastCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High Contrast Mode"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/largeTextCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Large Text Mode"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text Size"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <SeekBar
                    android:id="@+id/textSizeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="12"
                    android:progress="4"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/textSizePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preview Text Size: 16sp"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Screen Reader Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Screen Reader Support"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/screenReaderCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Screen Reader Support"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provides audio descriptions for screen elements"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="32dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Haptic Feedback Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haptic Feedback"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/vibrationFeedbackCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vibration Feedback"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provides tactile feedback for interactions"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="32dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Settings"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset to Defaults"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessibility Features Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These settings help make the app more accessible to users with different needs. Changes will be applied immediately and saved for future use."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView> 